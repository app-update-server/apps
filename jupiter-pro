    <script>
        const input = document.getElementById('access-code');
        const downloadArea = document.getElementById('download-area');
        const lockScreen = document.getElementById('lock-screen');
        const errorMsg = document.getElementById('error-msg');

        // DEFINE SUA SENHA AQUI
        const SENHA_CORRETA = "PLANETA"; 

        input.addEventListener('keyup', function(e) {
            const digitado = e.target.value.toUpperCase().trim();
            
            if (digitado === SENHA_CORRETA) {
                // Senha certa: Esconde a trava e mostra o download
                lockScreen.style.display = 'none';
                downloadArea.style.display = 'block';
            } else {
                // L√≥gica opcional: Mostrar erro apenas se o usu√°rio digitar muito e errar
                if(digitado.length >= SENHA_CORRETA.length && digitado !== SENHA_CORRETA) {
                    errorMsg.style.display = 'block';
                } else {
                    errorMsg.style.display = 'none';
                }
            }
        });
    </script>

